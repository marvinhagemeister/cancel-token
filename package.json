{
  "name": "@marvinh/cancel-token",
  "version": "1.0.0",
  "description": "Tiny cancel tokens similar to AbortController",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts' 'src/**/*.tsx'",
    "watch": "tsc -p tsconfig.build.json -w",
    "build": "npm run cleanup && tsc && tsc -p tsconfig.es.json",
    "test":
      "mocha -r ts-node/register --watch-extensions=ts 'src/**/*.spec.ts'",
    "test-watch": "npm t -- --watch",
    "coverage": "npm t -- --coverage",
    "prepublishOnly": "npm run lint && npm t && npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.5",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "mocha": "^5.1.0",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.7.0",
    "tslint-config-sevenval": "^1.0.0",
    "typescript": "^2.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --write", "tslint 'src/**/*.ts'", "git add"]
  }
}
